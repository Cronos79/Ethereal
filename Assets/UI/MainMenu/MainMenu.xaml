<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080"
  Background="#FF4D5052" Width="1920" Height="1080">
  <Page.Resources>
    <ResourceDictionary>
      <ControlTemplate x:Key="ButtonTemplate.001" TargetType="Button">

        <ControlTemplate.Triggers>
          <Trigger Value="True" Property="IsMouseOver">
            <Setter TargetName="BackgroundBorder" Property="Background" Value="#FF778899"/>
          </Trigger>
          <Trigger Value="True" Property="IsPressed">
            <Setter TargetName="BackgroundBorder" Property="Background" Value="#FF708090"/>
          </Trigger>
        </ControlTemplate.Triggers>
        <Grid x:Name="MMBtnMaster" Margin="0,10,0,10">
          <StackPanel x:Name="MMBtnHorStack" Orientation="Horizontal">
            <Grid x:Name="MMBtnDecortive" Width="64">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="1*"/>
              </Grid.ColumnDefinitions>
              <Grid x:Name="MMBtnDecortiveBacker" Margin="0" Grid.Column="1">
                <Grid.Background>
                  <SolidColorBrush Color="#FF02003D" Opacity="0.25"/>
                </Grid.Background>
              </Grid>
              <Grid x:Name="MMBtnDecortiveSpine" Margin="0" Background="#FF02003D" Opacity="0.5"/>
              <Grid x:Name="MMBtnDecortiveLine" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Width="8" Height="24" Background="#FF02003D" Opacity="0.5"/>
            </Grid>
            <StackPanel x:Name="MMBtnVertStack">
              <Grid x:Name="MMBtnTitleArea" Margin="0,0,0,8">
                <Grid x:Name="MMBtnTitleAreaBacker" Background="#FF02003D" Opacity="0.5"/>
                <Grid x:Name="MMBtnTitleAreaVariants" Margin="10,0,10,0">
                  <TextBlock x:Name="MMBtnTitleTxtNormal" Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" TextWrapping="Wrap" FontFamily="Arial" FontSize="56" Foreground="#FFBFBFBF"/>
                  <TextBlock x:Name="MMBtnTitleTxtHover" Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" TextWrapping="Wrap" FontFamily="Arial" FontSize="56" Foreground="#FF379BFF" Width="250" Opacity="0"/>
                </Grid>
              </Grid>
              <Grid x:Name="MMBtnSubTitleArea">
                <Grid x:Name="MMBtnSubTitleAreaBacker" Background="#FF02003D" Opacity="0.5"/>
                <StackPanel x:Name="MMBtnSubTitleStack" Orientation="Horizontal" Margin="10,0,0,0">
                  <Grid>
                    <TextBlock x:Name="MMBtnSubTitleTxtNormalCTA" Text="NAVIGATE" TextWrapping="Wrap" FontSize="24" FontFamily="Arial" Foreground="#FFBFBFBF"/>
                    <TextBlock x:Name="MMBtnSubTitleTxtHoverCTA" Text="NAVIGATE" TextWrapping="Wrap" FontSize="24" FontFamily="Arial" Foreground="#FF379BFF" Opacity="0"/>
                  </Grid>
                  <Grid x:Name="MMBtnSubTitleAreaVariants" Margin="8,0,0,0">
                    <TextBlock x:Name="MMBtnSubTitleTxtNormal" Text="&gt;&gt;&gt;" TextWrapping="Wrap" FontSize="24" FontFamily="Arial" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFECECEC"/>
                    <TextBlock x:Name="MMBtnSubTitleTxtHoverIcons" Text="&gt;&gt;&gt;" TextWrapping="Wrap" FontSize="24" FontFamily="Arial" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FF379BFF" Opacity="0"/>
                  </Grid>
                </StackPanel>
              </Grid>
            </StackPanel>
          </StackPanel>
        </Grid>
      </ControlTemplate>
    </ResourceDictionary>
  </Page.Resources>
  <Grid x:Name="Master">
    <Grid x:Name="Background">
      <Grid.Background>
        <ImageBrush ImageSource="Images/MainMenu.png" Stretch="UniformToFill"/>
      </Grid.Background>
    </Grid>
    <Grid x:Name="Instance">
      <Grid.RowDefinitions>
        <RowDefinition Height="64"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="64"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="64"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="64"/>
      </Grid.ColumnDefinitions>
      <Grid x:Name="HeaderBar" Height="16" VerticalAlignment="Top" Grid.ColumnSpan="5" Margin="0">
        <Grid.Background>
          <SolidColorBrush Color="#FF02003D" Opacity="0.2"/>
        </Grid.Background>
      </Grid>
      <Grid x:Name="FooterBar" Height="32" VerticalAlignment="Bottom" Grid.ColumnSpan="5" Margin="0" Grid.Row="3">
        <Grid.Background>
          <SolidColorBrush Color="#FF02003D" Opacity="0.2"/>
        </Grid.Background>
      </Grid>
      <Grid x:Name="ScreenTitle" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
        <Grid x:Name="ScreenTitleBacker" Background="#FF02003D" Opacity="0.65"/>
        <TextBlock x:Name="Title" Text="Kingdom of Enoch" TextWrapping="Wrap" FontSize="64" FontFamily="Arial" Margin="10,0,10,0" HorizontalAlignment="Center" Foreground="#FFBFBFBF"/>
      </Grid>
      <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">
        <Button Template="{DynamicResource ButtonTemplate.001}" Content="Play"/>
        <Button Content="Options" Template="{DynamicResource ButtonTemplate.001}"/>
        <Button Content="Exit" Template="{DynamicResource ButtonTemplate.001}"/>
      </StackPanel>
    </Grid>
    <Grid x:Name="Foreground"/>
  </Grid>
</Page>
